<Window x:Class="Ariketa9.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ariketa9"
        mc:Ignorable="d"
        Title="MainWindow" Height="525" Width="401">
    <Grid>
        <Button Content="Añadir" HorizontalAlignment="Left" Margin="260,66,0,0" VerticalAlignment="Top" Height="52" Width="85" Click="Button_Añadir"/>
        <Button Content="Eliminar" HorizontalAlignment="Left" Margin="260,156,0,0" VerticalAlignment="Top" Height="52" Width="85" Click="Button_Eliminar"/>
        <Button Content="Borrar Lista" HorizontalAlignment="Left" Margin="260,255,0,0" VerticalAlignment="Top" Height="52" Width="84" Click="Button_BorrarL"/>
        <Button Content="Salir" HorizontalAlignment="Left" Margin="260,390,0,0" VerticalAlignment="Top" Height="52" Width="85" Click="Button_Salir"/>

        <ListBox x:Name="lista" Margin="35,61,178,276" SelectionMode="Extended" MouseDoubleClick="lista_seleccionar"/>
        
        <Label Content="Mis Amigos" HorizontalAlignment="Left" Margin="35,35,0,0" VerticalAlignment="Top" Width="146"/>
        <Label Content="Amigo Seleccionado" HorizontalAlignment="Left" Margin="35,289,0,0" VerticalAlignment="Top" Width="136"/>
        <Label Content="Amigo Nuevo" HorizontalAlignment="Left" Margin="35,390,0,0" VerticalAlignment="Top"/>
       
        <TextBox x:Name="mostrar_amigo" HorizontalAlignment="Left" Margin="35,320,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="146" IsEnabled="False"/>
        <TextBox x:Name="amigo" HorizontalAlignment="Left" Margin="35,424,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="146" TextChanged="TextBox_TextChanged"/>


    </Grid>
</Window>
