<Window x:Class="TPV_sistema.Admin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TPV_sistema"
        mc:Ignorable="d"
        Title="Admin" Height="467" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Stocka">
                <Grid>
                    <ListView x:Name="Lista1" Margin="10" Height="350">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Izena" DisplayMemberBinding="{Binding Izena}" Width="400"/>
                                <GridViewColumn Header="Kantitatea" DisplayMemberBinding="{Binding Kantitatea}" Width="175"/>
                                <GridViewColumn Header="Prezioa" DisplayMemberBinding="{Binding Prezioa}" Width="175"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Button Content="Berria" HorizontalAlignment="Left" Margin="538,392,0,0" VerticalAlignment="Top"/>
                    <Button Content="Editatu" HorizontalAlignment="Left" Margin="580,392,0,0" VerticalAlignment="Top"/>
                    <Button Content="Ezabatu" HorizontalAlignment="Left" Margin="630,392,0,0" VerticalAlignment="Top"/>
                    <Button Content="Irten" HorizontalAlignment="Left" Margin="680,392,0,0" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
            <TabItem Header="Erabiltzaileak">
                <Grid>
                    <ListView x:Name="Lista2" Margin="10" Height="350">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Izena" DisplayMemberBinding="{Binding Izena}" Width="400"/>
                                <GridViewColumn Header="Pazahitza" DisplayMemberBinding="{Binding Kantitatea}" Width="175"/>
                                <GridViewColumn Header="Mota" DisplayMemberBinding="{Binding Prezioa}" Width="175"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Button Content="Berria" HorizontalAlignment="Left" Margin="538,392,0,0" VerticalAlignment="Top" />
                    <Button Content="Editatu" HorizontalAlignment="Left" Margin="580,392,0,0" VerticalAlignment="Top"/>
                    <Button Content="Ezabatu" HorizontalAlignment="Left" Margin="630,392,0,0" VerticalAlignment="Top"/>
                    <Button Content="Irten" HorizontalAlignment="Left" Margin="680,392,0,0" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
           
        </TabControl>
    </Grid>
</Window>
