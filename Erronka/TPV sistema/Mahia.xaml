<UserControl x:Class="TPV_sistema.Mahia"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TPV_sistema"
             mc:Ignorable="d" Height="100" Width="100"
             x:Name="mahiaControl">
    <Grid>
        <Button x:Name="MahiaId" 
                Content="{Binding id_mahia, StringFormat='Mahia {0}', ElementName=mahiaControl}" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                Height="100" 
                Width="100" 
                Click="Button_Click"/>
    </Grid>
</UserControl>
