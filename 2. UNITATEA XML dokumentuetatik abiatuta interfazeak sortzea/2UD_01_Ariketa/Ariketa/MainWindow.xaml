<Window x:Class="Ariketa.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ariketa"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListView x:Name="Lista" Margin="10" Height="350">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Titulua" DisplayMemberBinding="{Binding Titulua}" Width="450"/>
                    <GridViewColumn Header="Lehentasuna" DisplayMemberBinding="{Binding Lehentasuna}" Width="100"/>
                    <GridViewColumn Header="Azken eguna" DisplayMemberBinding="{Binding Azken_eguna}" Width="100"/>
                    <GridViewColumn Header="Egina" DisplayMemberBinding="{Binding Egina}" Width="80"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="Berria" HorizontalAlignment="Left" Margin="538,392,0,0" VerticalAlignment="Top" Click="Button_Berria_sortu" />
        <Button Content="Editatu" HorizontalAlignment="Left" Margin="580,392,0,0" VerticalAlignment="Top" Click="Button_editatu"/>
        <Button Content="Ezabatu" HorizontalAlignment="Left" Margin="630,392,0,0" VerticalAlignment="Top" Click="Button_Ezabatu"/>
        <Button Content="Irten" HorizontalAlignment="Left" Margin="680,392,0,0" VerticalAlignment="Top" Click="Button_irten"/>

    </Grid>
</Window>
